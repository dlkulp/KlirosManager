{
	"compilerOptions": {
		"target": "ESNext",
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"strict": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"useDefineForClassFields": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"outDir": "./dist"
	  },
	  "include": ["src/**/*.ts", "server.ts"],
	  "exclude": ["node_modules/**/*", "dist/**/*"]
}